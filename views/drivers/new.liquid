{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/drivers" method="POST">
            <fieldset>
                <legend>Create New Driver</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the driver"
                >
                <label class="form-label">Team: </label>
                <input
                    class="form-control"
                    type="team"
                    name="team"
                    placeholder="enter racing team"
                >
                <label class="form-label">Country: </label>
                <input
                    class="form-control"
                    type="country"
                    name="country"
                    placeholder="what country is the driver from?"
                >
                <label class="form-label">World Champion?: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="isWorldChampion"
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Create New Driver"
            >
        </form>
    </div>

{% endblock %}