{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        {%- comment -%} change the action {%- endcomment -%}
        {%- comment -%} add values to input fields {%- endcomment -%}
        {%- comment -%} add a back button {%- endcomment -%}
        <form action="/drivers/{{driver.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{driver.name}}</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the driver"
                    value="{{ driver.name }}"
                >
                <label class="form-label">Team: </label>
                <input
                    class="form-control"
                    type="text"
                    name="team"
                    placeholder="enter the team of the driver"
                    value="{{ driver.team }}"
                >
                <label class="form-label">Country: </label>
                <input
                    class="form-control"
                    type="text"
                    name="country"
                    placeholder="enter origin country"
                    value="{{ driver.name }}"
                >
                <label class="form-label">World Champion?: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="isWorldChampion"
                    {% if driver.isWorldChampion %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Edit {{driver.name}}"
            >
        </form>
    </div>

{% endblock %}